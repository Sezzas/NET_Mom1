@page
@model MyApp.Namespace.RazorModel
@{
    ViewData["Title"] = "Razor";

    // Lista på kurser i array
    string[] courses = { "DT057G | Webbutveckling I", "DT084G | Introduktion till programmering i JavaScript", "DT068G | Webbanvändbarhet",
    "DT163G | Digital bildbehandling för webb", "DT003G | Databaser", "DT093G | Webbutveckling II", "DT197G | Webbdesign för CMS", "DT173G | Webbutveckling III",
    "IK060G | Projektledning", "DT193G | Fullstack-utveckling med ramverk", "DT162G | Javascriptbaserad webbutveckling", "DT071G | Programmering i C#.NET" };

    // Dagens datum & tid
    var date = DateTime.Now;

    // Veckodag
    var weekday = date.DayOfWeek;
}

<h1>Razor</h1>

<h2>Information</h2>

<p>
    <strong>Datum/klockslag:</strong>
    @date
</p>

@if(weekday == DayOfWeek.Monday) {
    <p>Idag är det måndag!</p>
} else {
    <p>Idag är det inte måndag.</p>
}

<h2>Kurser jag läst</h2>

<ul>
    @foreach(var course in courses) {
        <li>@course</li>
    }
</ul>
